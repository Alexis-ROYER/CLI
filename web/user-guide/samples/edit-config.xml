<cli xmlns="http://alexis.royer.free.fr/CLI" name="my-config">
    <keyword string="show">
        <keyword string="ip">
            <keyword string="config">
                <endl></endl>
            </keyword>
            <keyword string="stats">
                <endl></endl>
            </keyword>
        </keyword>
    </keyword>
    <keyword string="edit">
        <keyword string="config">
            <endl><menu ref="edit"/></endl>
        </keyword>
    </keyword>

    <menu name="edit">
        <keyword string="set">
            <keyword string="ip">
                <keyword string="address">
                    <param type="host" id="addr">
                        <endl></endl>
                    </param>
                </keyword>
            </keyword>
        </keyword>
        <keyword string="reset">
            <keyword string="stats">
                <endl></endl>
            </keyword>
        </keyword>
    </menu>
</cli>
